{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "removeComments": true,
        "target": "ES2023",
        "lib": ["DOM", "ES2023"]
    },
    "include": ["src/*.ts", "test/*.ts"]
}
