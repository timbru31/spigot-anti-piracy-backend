{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "removeComments": true,
    "target": "es2018",
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "include": [
    "src/*.ts",
    "test/*.ts"
  ]
}
