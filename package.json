{
  "name": "spigot-anti-piracy-backend",
  "version": "1.2.1",
  "description": "A koajs application to blacklist leaked plugins",
  "bin": "dist/app.js",
  "main": "dist/app.js",
  "scripts": {
    "coverage": "nyc report --reporter=lcov",
    "lint": "tslint -p tsconfig.test.json -e '*.txt' '{src,test}/**/*.ts'",
    "start": "ts-node src/app.ts",
    "prerelease": "npm run test && rm -rf dist && tsc",
    "release": "standard-version",
    "pretest": "npm run lint",
    "test": "nyc mocha",
    "watch": "nodemon --exec 'ts-node' src/app.ts"
  },
  "engines": {
    "node": ">=8"
  },
  "author": {
    "name": "timbru31"
  },
  "dependencies": {
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-router": "^7.0.40",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.14.5",
    "@types/supertest": "^2.0.7",
    "coveralls": "^3.0.3",
    "mocha": "^6.1.4",
    "nodemon": "^1.18.11",
    "nyc": "^14.0.0",
    "should": "^13.2.3",
    "standard-version": "^5.0.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "license": "MIT",
  "repository": "timbru31/spigot-anti-piracy-backend",
  "bugs": {
    "url": "https://github.com/timbru31/spigot-anti-piracy-backend/issues"
  },
  "keywords": [
    "spigot",
    "bukkit",
    "minecraft",
    "ban",
    "leak"
  ],
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
