{
  "name": "spigot-anti-piracy-backend",
  "version": "1.1.0",
  "description": "A koajs application to blacklist leaked plugins",
  "bin": "dist/app.js",
  "main": "dist/app.js",
  "scripts": {
    "coverage": "nyc report --reporter=lcov",
    "lint": "tslint -p tsconfig.test.json -e '*.txt' '{src,test}/**/*.ts'",
    "start": "ts-node src/app.ts",
    "prerelease": "npm run test && rm -rf dist && tsc",
    "release": "standard-version",
    "pretest": "npm run lint",
    "test": "nyc mocha",
    "watch": "nodemon --exec 'ts-node' src/app.ts"
  },
  "engines": {
    "node": ">=8"
  },
  "author": {
    "name": "timbru31"
  },
  "dependencies": {
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/koa": "^2.0.44",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-router": "^7.0.28",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.1.0",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.9",
    "codacy-coverage": "^3.0.0",
    "codeclimate-test-reporter": "^0.5.0",
    "coveralls": "^3.0.1",
    "cz-customizable": "^5.2.0",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.4",
    "nyc": "^12.0.1",
    "should": "^13.2.1",
    "standard-version": "^4.3.0",
    "supertest": "^3.1.0",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "license": "MIT",
  "repository": "timbru31/spigot-anti-piracy-backend",
  "bugs": {
    "url": "https://github.com/timbru31/spigot-anti-piracy-backend/issues"
  },
  "keywords": [
    "spigot",
    "bukkit",
    "minecraft",
    "ban",
    "leak"
  ],
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
